extends ../layout
block content
  div(ng-app="eventApp")
    .container(ng-controller='EventCtrl as event')
        .jumbotron
            h1(align='center') Scheduled Events
            br
            #event-form.row
              .col-sm-8.col-sm-offset-2.text-center
                .form-group
                  input.form-control.input-lg.text-center(type="text" placeholder="Event Label" ng-model="formData.value")
                  br
                  button.btn.btn-primary.btn-lg(type="submit" ng-click="addEvent()") Add Event
          #event-list.row
            .col-sm-4.col-sm-offset-4
              .checkbox(ng-repeat='singleEvent in events')
                label
                  input(type='checkbox', ng-click='removeEvent(singleEvent)')
                  | {{ singleEvent.value }}