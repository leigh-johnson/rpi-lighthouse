extends ../layout

append css
  // append template-specific styles
append js
  // append template-specific javascripts
block content
  div(ng-app='listStrandApp')
    .container(ng-controller='ListStrandCtrl')
      .col-md-12.jumbotron.text-center
        button.btn.btn-primary.btn-large: h1 Create New
        h3 or 
        h1 Edit Existing 
        h3 #[span.fa.fa-arrow-down()] 
      .col-md-12
        section(ng-repeat="strand in strands track by $index")
          .col-md-4
            h3 Pattern Preview
            span.fa.fa-lightbulb-o.preview-led-sm(
            ng-repeat='led in strand.leds track by $index' 
            style="color: {{leds[$index]}}")
          .col-md-2
            h3 Settings
            .btn-group-vertical(role='group')
              button.btn.btn-primary.fa(ng-class="{'active fa-circle': strand.active == true, 'fa-circle-o': strand.active == false}") Active
              button.btn.btn-warning.fa.fa-edit(ng-click="edit(strand)") Edit
              button.btn.btn-danger.fa.fa-remove(ng-click="remove(strand)") Remove

      .col-md-12
        .alert.alert-danger(ng-show="strands == []")
          | 0 results found. Create a pattern above!
        .alert.alert-info(ng-show="!strands == []") 
          | {{strands.length}} results found.